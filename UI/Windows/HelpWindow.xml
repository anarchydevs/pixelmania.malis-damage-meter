						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="Specials" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
						<HLayoutSpacer/>
						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="Nanobots" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
						<HLayoutSpacer/>
						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="Pet" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
						<HLayoutSpacer/>
						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="Reflect/Shield" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
					</View>
					<View name="MeterViewDmgRoot" max_size="Point(253,-1)"  layout_borders="Rect(-13,0,2,0)">
						<Haxxor/>
					</View>
					<View view_layout="horizontal"  layout_borders="Rect(55,5,58,4)">
						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="User" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
						<HLayoutSpacer/>
						<TextView  layout_borders="Rect(2,0,2,0)" font="SMALL" value="Pet" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
					</View>
					<View name="MeterViewHealRoot" max_size="Point(253,-1)"  layout_borders="Rect(-13,0,2,0)">
						<Haxxor/>
					</View>
				</View>
			</View>

			<View layout_borders="Rect(20,0,0,0)">
				<TextView name="Commands" layout_borders="Rect(0,0,5,0)"  color="0x00FFF1AC" feature_flags="TVF_MULTILINE|TVF_RENDER_SHADOW"/>
			</View>
			<View layout_borders="Rect(20,0,0,0)">
				<TextView layout_borders="Rect(0,0,5,0)"  color="0x00FFF1AC" feature_flags="TVF_MULTILINE|TVF_RENDER_SHADOW" name="Info"/>
				<TextView min_size="Point(-1,20)"  value="~ Made with AOSharp SDK" layout_borders="Rect(90,0,0,0)" font="SMALL" color="0x00FFF1AC" feature_flags="TVF_MULTILINE|TVF_RENDER_SHADOW"/>
			</View>
