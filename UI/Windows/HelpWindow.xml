					<TextView min_size="Point(120,15)" layout_borders="Rect(2,0,2,0)" value="- Start / Pause" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
				</View>
				<View view_layout="horizontal" layout_borders="Rect(5,4,4,0)">
					<Button name="Reset" min_size="Point(15,15)"  max_size="Point(15,15)"/>
