				<Button layout_borders="Rect(10,1,0,0)" min_size="Point(15,15)"  max_size="Point(15,15)" name="Close"/>				
			</View>
			<View layout_borders="Rect(20,15,0,0)"  h_alignment="LEFT">
				<View view_layout="horizontal" layout_borders="Rect(5,4,4,0)">
					<Button name="Start" min_size="Point(15,15)"  max_size="Point(15,15)"/>
					<TextView layout_borders="Rect(2,0,2,0)" value="/" color="0x00FFF1AC" feature_flags="TVF_RENDER_SHADOW"/>
