<?xml version="1.0" standalone="yes"?>
<Root>
	<View>
		<BitmapView name="Logo" h_alignment="LEFT">
			<View view_layout="horizontal" min_size="Point(-1,20)" layout_borders="Rect(5,3,4,0)">
